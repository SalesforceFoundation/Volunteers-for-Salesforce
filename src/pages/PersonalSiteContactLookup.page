<apex:page showheader="false" sidebar="false" standardStylesheets="false" controller="VOL_CTRL_PersonalSiteContactLookup"
    language="{!strLanguage}" cache="false">

    <!-- Load jQuery  -->
    <apex:includeScript value="{!URLFOR($Resource.jQueryFiles, 'js/jquery.min.js')}" />
    <apex:includeScript value="{!URLFOR($Resource.jQueryFiles, 'js/jquery-ui.custom.min.js')}" />

    <!--Load Bootstrap -->
    <apex:stylesheet value="{!URLFOR($Resource.Bootstrap4Force)}" />
    <apex:stylesheet value="{!URLFOR($Resource.Bootstrap, 'bootstrap/css/bootstrap.min.css')}" />
    <apex:includescript value="{!URLFOR($Resource.Bootstrap, 'bootstrap/js/bootstrap.min.js')}" />

    <apex:includeScript value="{!URLFOR($Resource.jQueryFiles, 'js/jquery.validate.min.js')}" />

    <apex:stylesheet value="{!strURLtoCSSFile}" />    

    <script type="text/javascript"> 

        jQuery = $.noConflict();

        jQuery(document).ready(function () {   // Pass params into the controller

            jQuery.validator.addMethod("notEqual", function (value, element, param) {
                return this.optional(element) || value != param;
            }, "Please specify a different (non-default) value");

            jQuery('[id$=form1]').validate();

            jQuery('[id$=FirstName]').rules("add", {
                required: true,
                notEqual: "{!JSINHTMLENCODE($ObjectType.Contact.Fields.FirstName.Label)}",
                messages: {
                    required: "{!JSINHTMLENCODE($Label.labelPersonalSiteFirstnameRequired)}",
                    notEqual: "{!JSINHTMLENCODE($Label.labelPersonalSiteFirstnameRequired)}"
                }
            });

            jQuery('[id$=LastName]').rules("add", {
                required: true,
                notEqual: "{!JSINHTMLENCODE($ObjectType.Contact.Fields.LastName.Label)}",
                messages: {
                    required: "{!JSINHTMLENCODE($Label.labelPersonalSiteLastnameRequired)}",
                    notEqual: "{!JSINHTMLENCODE($Label.labelPersonalSiteLastnameRequired)}"
                }
            });

            jQuery('[id$=Email]').rules("add", {
                required: true,
                email: true,
                notEqual: "{!JSINHTMLENCODE($ObjectType.Contact.Fields.Email.Label)}",
                messages: {
                    required: "{!JSINHTMLENCODE($Label.labelPersonalSiteEmailRequired)}",
                    email: "{!JSINHTMLENCODE($Label.labelPersonalSiteEmailError)}",
                    notEqual: "{!JSINHTMLENCODE($Label.labelPersonalSiteEmailError)}"
                }
            });

            Prefill();
        });


        function updateHelpText(field, string) {
            jQuery("." + field).val(string);
            jQuery("." + field).css("color", "black");
        }

        function Prefill() {
            jQuery(".FirstName").val('{!JSINHTMLENCODE($ObjectType.Contact.Fields.Firstname.Label)}');
            jQuery(".FirstName").css("color", "gray");
            jQuery(".LastName").val('{!JSINHTMLENCODE($ObjectType.Contact.Fields.Lastname.Label)}');
            jQuery(".LastName").css("color", "gray");
            jQuery(".Email").val('{!JSINHTMLENCODE($ObjectType.Contact.Fields.Email.Label)}');
            jQuery(".Email").css("color", "gray");
        }
    </script>

    <apex:form id="form1" styleclass="form1">
        <apex:outputPanel id="panelVolunteerLookup" styleClass="thumbnail center well well-small text-center cssContactLookupPanel">

            <h3>{!$Label.labelContactInfoLookupTitle}</h3>

            <p>
                <apex:outputText value="{!$Label.labelContactLookupInstructions}" />
            </p>

            <div class="input-prepend">
                <span class="add-on">
                    <i class="icon-user"></i>
                </span>
                <apex:inputText value="{!contact.FirstName}" id="FirstName" required="true" styleClass="FirstName" onfocus="updateHelpText('FirstName','');"
                />
            </div>
            <br/>

            <div class="input-prepend">
                <span class="add-on">
                    <i class="icon-user"></i>
                </span>
                <apex:inputText value="{!contact.LastName}" id="LastName" styleClass="LastName" onfocus="updateHelpText('LastName','');"
                />
            </div>
            <br/>

            <div class="input-prepend">
                <span class="add-on">
                    <i class="icon-envelope"></i>
                </span>
                <apex:inputText value="{!contact.Email}" id="Email" styleClass="Email" onfocus="updateHelpText('Email','');" />
            </div>
            <br/>
            <apex:commandButton id="contactLookupBtn" 
                                value="{!$Label.labelButtonSend}" 
                                immediate="false" 
                                action="{!LookupContact}" 
                                styleclass="btn btn-large" />
            <br/>
            <br/>
            <p>
                <apex:outputText value="{!strResult}" />
            </p>
            <div id="captcha" style="display: inline-block;">
                <c:captcha></c:captcha>
            </div>
        </apex:outputPanel>

    </apex:form>

</apex:page>