<apex:page title="{!$Label.labelVolunteersHelp}" tabStyle="Task" docType="html-5.0" standardStylesheets="false">
    <apex:stylesheet value="{!URLFOR($Resource.sfdo213, '/assets/styles/salesforce-lightning-design-system-vf.min.css')}" />

    <div class="sfdo213">
        <h1 class="slds-text-align--center slds-p-top--large slds-p-bottom--large"><apex:outputText value="{!$Label.labelVolunteersHelpDescription}" escape="false"/></h1>
        <div class="slds-grid slds-grid--align-space slds-p-top--large" id="grid">
            <div class="slds-col slds-size--1-of-6" id="colStep1">
                <div class="slds-text-align--center slds-p-bottom--small">{!$Label.labelVolunteersHelpStep1}</div>
                <figure class="slds-image">
                    <a href="https://developer.salesforce.com/trailhead/trail/nonprofit_volunteer" class="slds-align--absolute-center">
                        <img src="{!URLFOR($Resource.v4sStaticResources, '/Images/trailhead_npo.png')}" alt="{!$Label.labelVolunteersHelpStep1}"/>
                    </a>
                </figure>
                <p class="slds-text-align--center slds-p-top--small">{!$Label.labelVolunteersHelpStep1Text}</p>
            </div>
            <div class="slds-col slds-size--1-of-6" id="colStep2">
                <div class="slds-text-align--center slds-p-bottom--small">{!$Label.labelVolunteersHelpStep2}</div>
                <figure class="slds-image">
                    <a href="https://powerofus.force.com/V4S_Documentation" class="slds-align--absolute-center">
                        <img src="{!URLFOR($Resource.v4sStaticResources, '/Images/v4s_logo.png')}" alt="{!$Label.labelVolunteersHelpStep2}"/>
                    </a>
                </figure>
                <p class="slds-text-align--center slds-p-top--small">{!$Label.labelVolunteersHelpStep2Text}</p>
            </div>
            <div class="slds-col slds-size--1-of-6"  id="colStep3">
                <div class="slds-text-align--center slds-p-bottom--small">{!$Label.labelVolunteersHelpStep3}</div>
                <figure class="slds-image">
                    <a href="https://powerofus.force.com/V4S_Group" class="slds-align--absolute-center">
                        <img src="{!URLFOR($Resource.v4sStaticResources, '/Images/power-of-us-hub_rgb.png')}"
                            alt="{!$Label.labelVolunteersHelpStep3}" height="100" width="130"/>
                    </a>
                </figure>
                <p class="slds-text-align--center slds-p-top--small">{!$Label.labelVolunteersHelpStep3Text}</p>
            </div>
        </div>
    </div>
</apex:page>